<body>
    <div class="player-container">
        <div class="title-bar">
            <span>♪ Winamp Player</span>
            <div class="close-btn">×</div>
        </div>

        <div class="autoplay-notice" id="autoplayNotice">
            Click PLAY to start music (browser autoplay blocked)
        </div>

        <div class="display-area">
            <div class="track-info" id="trackInfo">Press Play...</div>
            <div class="time-display" id="timeDisplay">00:00 / 00:00</div>
            <div class="progress-bar" id="progressBar">
                <div class="progress-fill" id="progressFill"></div>
            </div>
        </div>

        <div class="controls">
            <div class="control-btn" onclick="previousTrack()" title="Previous">⏮</div>
            <div class="control-btn" onclick="playPause()" id="playBtn" title="Play">▶</div>
            <div class="control-btn" onclick="stopTrack()" title="Stop">⏹</div>
            <div class="control-btn" onclick="nextTrack()" title="Next">⏭</div>
        </div>

        <div class="volume-control">
            <span class="volume-label">Volume:</span>
            <input type="range" class="volume-slider" id="volumeSlider" min="0" max="100" value="70">
        </div>

        <div class="playlist" id="playlist"></div>
    </div>

    <audio id="audioPlayer"></audio>

    <script>
        // ========================================
        // EASY CUSTOMIZATION SECTION
        // Replace these with your actual music files!
        // ========================================
        
        const playlist = [
            {
                title: "aux",
                artist: "m1xtapeman",
                url: "https://www.dropbox.com/scl/fo/vm7suq96j3ph0dfxv3tsd/AEGvIDXnqLrwvuCItmUywlM?rlkey=3dpj8w6ei0h9ldq6kfcybad9l&st=pfvuozqr&dl=1"
            },
            {
             title: "bangalore",
                artist: "m1xtapeman",
                url: "https://www.dropbox.com/scl/fi/ptr2w08ch9gs5lmkxob0d/Bangalore.aif?rlkey=hsliv7urqh1j9bwsxajqbz29d&st=cj0estac&dl=1" 
            },
            {
              title: "fuck it",
                artist: "m1xtapeman",
                url:"https://www.dropbox.com/scl/fi/m4xlcnpleb5s16tqfqykj/Fuck-it..wav?rlkey=e47vwqvekraise5r73zvg1vg5&st=6bifcx8y&dl=1"  
            }
        ];

        // ========================================
        // END CUSTOMIZATION SECTION
        // ========================================

        const audio = document.getElementById('audioPlayer');
        const playBtn = document.getElementById('playBtn');
        const trackInfo = document.getElementById('trackInfo');
        const timeDisplay = document.getElementById('timeDisplay');
        const progressBar = document.getElementById('progressBar');
        const progressFill = document.getElementById('progressFill');
        const volumeSlider = document.getElementById('volumeSlider');
        const playlistEl = document.getElementById('playlist');
        const autoplayNotice = document.getElementById('autoplayNotice');

        let currentTrackIndex = 0;
        let isPlaying = false;

        // Initialize
        function init() {
            renderPlaylist();
            loadTrack(0);
            audio.volume = volumeSlider.value / 100;
            
            // Try to autoplay
            tryAutoplay();
        }

        function tryAutoplay() {
            const playPromise = audio.play();
            
            if (playPromise !== undefined) {
                playPromise.then(() => {
                    isPlaying = true;
                    playBtn.textContent = '⏸';
                }).catch(() => {
                    autoplayNotice.style.display = 'block';
                    isPlaying = false;
                    playBtn.textContent = '▶';
                });
            }
        }

        function renderPlaylist() {
            playlistEl.innerHTML = '';
            playlist.forEach((track, index) => {
                const item = document.createElement('div');
                item.className = 'playlist-item';
                item.textContent = `${index + 1}. ${track.title} - ${track.artist}`;
                item.onclick = () => loadTrack(index);
                playlistEl.appendChild(item);
            });
        }

        function loadTrack(index) {
            currentTrackIndex = index;
            const track = playlist[index];
            audio.src = track.url;
            trackInfo.textContent = `♪ ${track.title}\n${track.artist}`;
            
            // Update playlist highlighting
            document.querySelectorAll('.playlist-item').forEach((item, i) => {
                item.classList.toggle('active', i === index);
            });

            if (isPlaying) {
                audio.play();
            }
        }

        function playPause() {
            autoplayNotice.style.display = 'none';
            if (isPlaying) {
                audio.pause();
                playBtn.textContent = '▶';
                isPlaying = false;
            } else {
                audio.play();
                playBtn.textContent = '⏸';
                isPlaying = true;
            }
        }

        function stopTrack() {
            audio.pause();
            audio.currentTime = 0;
            playBtn.textContent = '▶';
            isPlaying = false;
        }

        function nextTrack() {
            currentTrackIndex = (currentTrackIndex + 1) % playlist.length;
            loadTrack(currentTrackIndex);
            if (isPlaying) {
                audio.play();
            }
        }

        function previousTrack() {
            currentTrackIndex = (currentTrackIndex - 1 + playlist.length) % playlist.length;
            loadTrack(currentTrackIndex);
            if (isPlaying) {
                audio.play();
            }
        }

        // Time update
        audio.addEventListener('timeupdate', () => {
            const current = formatTime(audio.currentTime);
            const duration = formatTime(audio.duration);
            timeDisplay.textContent = `${current} / ${duration}`;
            
            const percent = (audio.currentTime / audio.duration) * 100;
            progressFill.style.width = percent + '%';
        });

        // Auto-advance to next track
        audio.addEventListener('ended', () => {
            nextTrack();
        });

        // Progress bar click
        progressBar.addEventListener('click', (e) => {
            const rect = progressBar.getBoundingClientRect();
            const percent = (e.clientX - rect.left) / rect.width;
            audio.currentTime = percent * audio.duration;
        });

        // Volume control
        volumeSlider.addEventListener('input', (e) => {
            audio.volume = e.target.value / 100;
        });

        function formatTime(seconds) {
            if (isNaN(seconds)) return '00:00';
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        // Start the player
        init();
    </script>
</body>
</html>
